<!doctype html>
{# <html amp{% if head.lang %} lang="{{ head.lang }}"{% endif %}> #}
<html{% if head.lang %} lang="{{ head.lang }}"{% endif %}>
<head>
    <meta charset="utf-8">

    {% block head_meta %}
        {% if head.title %}
            <title>{{ head.title }}</title>
        {% endif %}
        {% if head.author %}
            <meta name="author" content="{{ head.author }}"/>
        {% endif %}
        {% if head.description %}
            <meta name="description" content="{{ head.description }}">
        {% endif %}
        {% if head.keywords %}
            <meta name="keywords" content="{{ head.keywords }}">
        {% endif %}
        {% if head.lang %}
            <meta http-equiv="language" content="{{ head.lang }}">
        {% endif %}

        <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

        {# <link rel="canonical" href="https://amp.dev/documentation/guides-and-tutorials/start/create/basic_markup/"> #}

        {# <script type="application/ld+json">
            {
                "@context": "http://schema.org",
                "@type": "NewsArticle",
                "headline": "Open-source framework for publishing content",
                "datePublished": "2015-10-07T12:02:41Z",
                "image": [
                    "logo.jpg"
                ]
            }
        </script> #}
    {% endblock %}

    {% block head_end %}
        <link href="{{ styleSheet ?: '/styles/main.css' }}" rel="stylesheet" type="text/css"/>
    {% endblock %}
</head>
<body>
{% block body %}
    {% block header %}
        <div class="header">
            {% block header_inner %}
                <header class="header--inner">
                    {% block header_inner__ %}{% endblock %}
                </header>
            {% endblock %}
        </div>
    {% endblock %}

    {% block container_inner %}
        {% block content %}
        {% endblock %}
    {% endblock %}

    {% block footer %}
        <div class="footer">
            {% block footer_inner %}
                <footer class="footer--inner">
                    {% block footer_inner__ %}{% endblock %}
                </footer>
            {% endblock %}
        </div>
    {% endblock %}

    {% block body_end %}{% endblock %}

    {% block foot_js %}{% endblock %}
{% endblock %}
</body>
</html>
