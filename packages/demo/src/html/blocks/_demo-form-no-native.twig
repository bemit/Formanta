<section class="demo demo-form">
    <h2 class="demo-title">Form</h2>

    <div class="form-control">
        <label class="label">Normal Field</label>
        <input class="inp" type="text" placeholder="Enter some info"/>
    </div>

    <div class="form-control">
        <label class="label">Dropdown Field</label>
        <select class="body1 inp">
            <option>Option 1</option>
            <option>Option 2</option>
            <option>Option 3</option>
        </select>
    </div>

    <div class="form-control">
        <label class="label">Dropdown Dense</label>
        <select class="body1 dense inp">
            <option>Option 1</option>
            <option>Option 2</option>
            <option>Option 3</option>
        </select>
    </div>

    <fieldset class="fieldset">
        <legend>Toggled Inputs</legend>
        <div class="form-control">
            <label class="label body1"><input class="inp" type="checkbox">Checkbox</label>
        </div>
        <div class="form-control">
            <label class="label body1"><input class="inp" type="radio" name="radio">Radio</label>
        </div>
        <div class="form-control">
            <label class="label body1"><input class="inp" type="radio" name="radio">Radio</label>
        </div>
    </fieldset>

    <div class="form-control">
        <label class="label">Invalid Field</label>
        <input class="invalid inp" type="text" placeholder="Enter valid info"/>
        <p class="validation-error">Please enter a valid value.</p>
    </div>

    <div class="form-control-group">
        <div class="form-control mr2-md">
            <label class="label">Grouped Field 1</label>
            <input class="inp" type="text" placeholder="Enter valid value 1"/>
        </div>

        <div class="form-control grow-2x">
            <label class="label">Grouped Field 2</label>
            <input class="inp" type="text" placeholder="Enter valid value 2"/>
        </div>
    </div>

    <div class="form-control">
        <label class="label">Text Area</label>
        <textarea class="inp-text">Lorem ipsum.</textarea>
    </div>
</section>
